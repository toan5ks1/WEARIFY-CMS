generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model addresses {
  id         BigInt    @id @unique(map: "id") @default(autoincrement()) @db.UnsignedBigInt
  line1      String?
  line2      String?
  city       String?
  state      String?
  postalCode String?
  country    String?
  createdAt  DateTime? @default(dbgenerated("(now())")) @db.Timestamp(0)
}

model carts {
  id              BigInt    @id @unique(map: "id") @default(autoincrement()) @db.UnsignedBigInt
  paymentIntentId String?
  clientSecret    String?
  items           Json?     @default(dbgenerated("(_utf8mb4\\'null\\')"))
  createdAt       DateTime? @default(dbgenerated("(now())")) @db.Timestamp(0)
  closed          Boolean   @default(false)
}

model category {
  id        BigInt    @id @unique(map: "id") @default(autoincrement()) @db.UnsignedBigInt
  title     String
  createdAt DateTime? @default(dbgenerated("(now())")) @db.Timestamp(0)
  images    Json?     @default(dbgenerated("(_utf8mb4\\'null\\')"))
  icon      String?
}

model color {
  id        BigInt    @id @unique(map: "id") @default(autoincrement()) @db.UnsignedBigInt
  name      String
  value     String
  createdAt DateTime? @default(dbgenerated("(now())")) @db.Timestamp(0)
}

model email_preferences {
  id            BigInt    @id @unique(map: "id") @default(autoincrement()) @db.UnsignedBigInt
  userId        String?
  email         String
  token         String
  newsletter    Boolean   @default(false)
  marketing     Boolean   @default(false)
  transactional Boolean   @default(false)
  createdAt     DateTime? @default(dbgenerated("(now())")) @db.Timestamp(0)
}

model orders {
  id                        BigInt    @id @unique(map: "id") @default(autoincrement()) @db.UnsignedBigInt
  storeId                   Int
  items                     Json?     @default(dbgenerated("(_utf8mb4\\'null\\')"))
  stripePaymentIntentId     String
  stripePaymentIntentStatus String
  name                      String?
  email                     String?
  addressId                 Int?
  createdAt                 DateTime? @default(dbgenerated("(now())")) @db.Timestamp(0)
  quantity                  Int?
  amount                    Decimal   @default(0.00) @db.Decimal(10, 2)
}

model payments {
  id                     BigInt    @id @unique(map: "id") @default(autoincrement()) @db.UnsignedBigInt
  storeId                Int
  stripeAccountId        String
  stripeAccountCreatedAt Int?
  stripeAccountExpiresAt Int?
  detailsSubmitted       Boolean   @default(false)
  createdAt              DateTime? @default(dbgenerated("(now())")) @db.Timestamp(0)
}

model products {
  id          BigInt    @id @unique(map: "id") @default(autoincrement()) @db.UnsignedBigInt
  name        String
  description String?   @db.Text
  images      Json?     @default(dbgenerated("(_utf8mb4\\'null\\')"))
  category    String
  subcategory String
  price       Decimal   @default(0.00) @db.Decimal(10, 2)
  inventory   Int       @default(0)
  rating      Int       @default(0)
  tags        Json?     @default(dbgenerated("(_utf8mb4\\'null\\')"))
  storeId     Int
  createdAt   DateTime? @default(dbgenerated("(now())")) @db.Timestamp(0)
  isFeatured  Boolean?  @default(false)
}

model size {
  id        BigInt    @id @unique(map: "id") @default(autoincrement()) @db.UnsignedBigInt
  name      String
  value     String
  createdAt DateTime? @default(dbgenerated("(now())")) @db.Timestamp(0)
}

model stores {
  id              BigInt    @id @unique(map: "id") @default(autoincrement()) @db.UnsignedBigInt
  userId          String
  name            String
  description     String?   @db.Text
  slug            String?   @db.Text
  createdAt       DateTime? @default(dbgenerated("(now())")) @db.Timestamp(0)
  active          Boolean   @default(false)
  stripeAccountId String?
  isFeatured      Boolean   @default(false)
}

model sub_category {
  id          BigInt    @id @unique(map: "id") @default(autoincrement()) @db.UnsignedBigInt
  title       String
  description String?   @db.Text
  images      Json?     @default(dbgenerated("(_utf8mb4\\'null\\')"))
  slug        String?
  icon        String?
  categoryId  Int
  createdAt   DateTime? @default(dbgenerated("(now())")) @db.Timestamp(0)
}
